{
	"name": "str-fns",
	"description": "a collection of string functions",
	"version": "0.0.9",
	"author": "@ryoppippi",
	"repository": "ryoppippi/str-fns",
	"type": "module",
	"main": "src/index.js",
	"types": "./types/index.d.ts",
	"scripts": {
		"build": "dts-buddy",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"publint": "publint",
		"test": "npm-run-all --parallel test:*",
		"test:vitest": "vitest",
		"test:typecheck": "pnpm run build && vitest typecheck",
		"coverage": "vitest run --coverage",
		"prepare": "git config --local core.hooksPath .githooks || echo 'Can not set git hooks'",
		"prepublishOnly": "pnpm run build && npm-run-all lint publint 'test:* -- --run'"
	},
	"files": [
		"src",
		"types"
	],
	"keywords": [
		"string",
		"functions",
		"utils",
		"typescript",
		"typesafe"
	],
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"dependencies": {
		"type-fest": "^4.2.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"@vitest/browser": "^0.34.2",
		"@vitest/coverage-v8": "^0.34.2",
		"dts-buddy": "^0.1.13",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jsdoc": "^46.5.0",
		"lint-staged": "^14.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.2",
		"publint": "^0.2.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.2",
		"webdriverio": "^8.15.4"
	},
	"license": "MIT",
	"volta": {
		"node": "18.17.1",
		"pnpm": "8.6.12"
	},
	"engines": {
		"npm": "use pnpm please!",
		"yarn": "use pnpm please!",
		"pnpm": ">=8.6.12"
	},
	"lint-staged": {
		"src/*.{js,ts,json}": [
			"pnpm format",
			"pnpm lint"
		],
		"src/**/*.{js,ts}": [
			"pnpm test:vitest --run",
			"pnpm test:typecheck --run"
		]
	}
}
