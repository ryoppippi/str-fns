{
	"name": "str-fns",
	"description": "a collection of string functions",
	"version": "0.0.10",
	"author": "@ryoppippi",
	"repository": "ryoppippi/str-fns",
	"type": "module",
	"main": "src/index.js",
	"types": "./types/index.d.ts",
	"scripts": {
		"build": "dts-buddy",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"publint": "publint",
		"test": "bun test",
		"typecheck": "bun x tsc --noEmit",
		"prepare": "git config --local core.hooksPath .githooks || echo 'Can not set git hooks'",
		"prepublishOnly": "bun run lint && bun run publint && bun run typecheck && bun run test && bun run build"
	},
	"files": [
		"src",
		"types"
	],
	"keywords": [
		"string",
		"functions",
		"utils",
		"typescript",
		"typesafe"
	],
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"dependencies": {
		"type-fest": "^4.3.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"bun-types": "^1.0.2",
		"dts-buddy": "^0.2.4",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jsdoc": "^46.8.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"publint": "^0.2.2",
		"typescript": "^5.2.2"
	},
	"license": "MIT",
	"engines": {
		"npm": "use bun please!",
		"yarn": "use bun please!",
		"pnpm": "use bun please!"
	},
	"lint-staged": {
		"src/*.{js,ts,json}": [
			"bun run format",
			"bun run lint"
		]
	}
}
