{
  "name": "str-fns",
  "description": "a collection of string functions",
  "version": "0.0.10",
  "author": "@ryoppippi",
  "repository": "ryoppippi/str-fns",
  "type": "module",
  "main": "src/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "dts-buddy",
    "format": "biome format . --write",
    "lint": "biome check .",
    "publint": "publint",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks || echo 'Can not set git hooks'",
    "prepublishOnly": "bun run lint && bun run publint && bun run typecheck && bun run test && bun run build"
  },
  "files": ["src", "types"],
  "keywords": ["string", "functions", "utils", "typescript", "typesafe"],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "dependencies": {
    "type-fest": "^4.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "bun-plugin-dts": "^0.2.1",
    "bun-types": "^1.0.4",
    "dts-buddy": "^0.2.5",
    "publint": "^0.2.4",
    "typescript": "^5.2.2"
  },
  "license": "MIT",
  "engines": {
    "npm": "use bun please!",
    "yarn": "use bun please!",
    "pnpm": "use bun please!"
  }
}
